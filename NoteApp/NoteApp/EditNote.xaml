<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.EditNote">
    <ContentPage.Content>
        <StackLayout Margin="16" Spacing="8">
            <Entry x:Name="Name" Placeholder="Název"/>
            <Editor x:Name="Text" Placeholder="Obsah" HeightRequest="120"/>
            <Button x:Name="Submit" Text="Upravit" Clicked="Submit_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>